<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.s2dioapps.metask">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/Theme.Metask">
        <activity

            android:name="com.s2dioapps.metask.ui.component.register.view.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.Metask.NoActionBar">
        </activity>
        <activity
            android:name=".ui.component.login.view.LoginActivity"
            android:theme="@style/Theme.Metask.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.component.createtask.view.CreateTaskActivity" />
        <activity
            android:name=".ui.component.splash.view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Metask.NoActionBar">

        </activity>
        <activity
            android:name=".ui.component.main.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Metask.NoActionBar">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>